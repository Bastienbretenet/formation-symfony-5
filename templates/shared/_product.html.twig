<div class="flex max-w-md bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="w-1/3 bg-cover" 
        style="background-image: url('{{ product.mainPicture }}')">
    </div> 
    <div class="w-2/3 p-4">
        <h4 class="text-gray-900 font-bold text-2xl">{{ product.name }}</h4>
        <div class="mt-2 text-md uppercase font-bold text-gray-600 tracking-wide">{{ product.category.name }}</div>
        <p class="mt-2 text-gray-600 text-sm">{{ product.shortDescription }}</p>
        <h4 class="mt-2 text-gray-700 font-bold text-xl">{{ product.price / 100 }} €</h4>
        <div class="flex item-center justify-around mt-3">
            <button class="px-3 py-2 m-2 bg-green-500 text-white text-xs font-bold uppercase rounded hover:shadow-lg">Ajouter</button>
            <button class="px-3 py-2 m-2 bg-gray-500 text-white text-xs font-bold uppercase rounded hover:shadow-lg">Détails</button>
        </div>
    </div>
</div>